<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_employee_data_excel_report" model="ir.ui.view">
			<field name="name">employee.data.excel.report.view</field>
			<field name="model">employee.data.excel.report</field>
			<field name="arch" type="xml">
				<form string="Employee Data Report">
					<group>
						<group>
							<field name="city_ids" string="Cities" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
							<field name="branch_ids" string="Campus" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
						</group>
					</group>

					<footer>
					   <button name="make_excel" string="Print Excel" type="object" default_focus="1" class="oe_highlight"/>
						<button special="cancel" string="Close" default_focus="1" class="oe_highlight"/>
					</footer>
				</form>		            
            </field>
        </record>
        "Students Student
        <!-- Action -->
       <record id="action_employee_data_report" model="ir.actions.act_window">
            <field name="name">Employee Data Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">employee.data.excel.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
       </record>

		<!-- menu -->
		<menuitem id="menu_report_employee_data"
			name="Employee Data"
			action="action_employee_data_report"
			parent="hr.hr_menu_hr_reports"
			sequence="10"/>

	</data>
</odoo>
