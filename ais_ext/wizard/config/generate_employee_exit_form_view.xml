<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="generate_employee_exit_form_view" model="ir.ui.view">
			<field name="name">generate.employee.exit.form.view</field>
			<field name="model">generate.employee.exit.form</field>
			<field name="arch" type="xml">
				<form string="Generate the Employee Exit Form">
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                        </group>
                    </group>

				    <footer>
				        <button name="generate_exit_form_funct" string="Generate Exit Form" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
				    </footer>
				</form>
			</field>
		</record>

        <record id="action_generate_employee_exit_form" model="ir.actions.act_window">
        <field name="name">Generate Exit Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generate.employee.exit.form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_employee" />
        <field name="binding_view_types">form,list</field>
    </record>

    </data>
</odoo>