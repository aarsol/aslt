<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_employee_transfer_wiz_view" model="ir.ui.view">
			<field name="name">hr.employee.transfer.wiz.view</field>
			<field name="model">hr.employee.transfer.wiz</field>
			<field name="arch" type="xml">
				<form string="Employee Transfer Wizard">
                    <group>
                        <group>
                            <field name="to_department_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                            <field name="to_job_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                            <field name="to_branch_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                            <field name="transfer_date" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <field name="employee_ids" readonly="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="father_name"/>
                                <field name="cnic"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="branch_id"/>
                                <field name="city_id"/>
                            </tree>
                        </field>
                    </group>

				    <footer>
				        <button name="employee_transfer_fuct" string="Employee(s) Transfer" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
				    </footer>
				</form>
			</field>
		</record>
        <record id="action_hr_employee_transfer_wiz" model="ir.actions.act_window">
            <field name="name">Employee Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.transfer.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_hr_employee"/>
            <field name="binding_view_types">form,list</field>
        </record>
    </data>
</odoo>