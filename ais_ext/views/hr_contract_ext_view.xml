<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
         <!-- hr.contract  from the Indian payroll-->
         <record id="hr_contract_form_in_inherit" model="ir.ui.view">
            <field name="name">in.inherit.hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="l10n_in_hr_payroll.hr_contract_form_in_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='right_column']" position="replace">
                 </xpath>

                 <xpath expr="//group[@name='right_column']" position="replace">
                 </xpath>
            </field>
         </record>


        <!-- odoo Core  (hr.contract)-->
        <record id="ais_hr_contract_form_inherit" model="ir.ui.view">
            <field name="name">ais.inherit.hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
             <field name="job_id" position="attributes">
                <attribute name="invisible">True</attribute>
             </field>
             <field name="department_id" position="after">
                <field name="job_id"/>
                 <field name="employee_code" invisbile="1"/>
            </field>
            <xpath expr="//field[@name='structure_type_id']" position="after">
                <field name="branch_id"/>
                <field name="city_id"/>
            </xpath>
            </field>
         </record>

        <!-- odoo Core -->
        <record id="ais_hr_contract_view_search_inherit" model="ir.ui.view">
            <field name="name">ais.inherit.hr.contract.search.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="arch" type="xml">
               <field name="job_id" position="after">
                   <field name="employee_code" string="Employee Code"/>
                   <field name="branch_id"/>
                   <field name="city_id"/>
               </field>
                <xpath expr="//filter[@name='group_by_state']" position="after">
                    <separator/>
                    <filter string="Branch" name="group_by_branch" domain="[]" context="{'group_by': 'branch_id'}"/>
                    <filter string="City" name="group_by_city" domain="[]" context="{'group_by': 'city_id'}"/>
                </xpath>
                <xpath expr="//search" position="inside">
                    <searchpanel>
                        <field name="city_id"/>
                        <field name="branch_id" select="multi" domain="[('city_id','=',city_id)]"/>
                    </searchpanel>
                </xpath>
            </field>
        </record>

         <!-- odoo Core -->
        <record id="ais_hr_contract_view_tree_inherit" model="ir.ui.view">
            <field name="name">ais.inherit.hr.contract.tree.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">
                <field name="employee_id" position="before">
                    <field name="employee_code"/>
                </field>
                <field name="job_id" position="after">
                   <field name="branch_id"/>
                   <field name="city_id"/>
                </field>
                <field name="resource_calendar_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
            </field>
        </record>


        <!-- Action -->
        <record id="hr_contract.action_hr_contract" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">hr.contract</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="domain">[('employee_id', '!=', False)]</field>
            <field name="search_view_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new contract
              </p>
            </field>
        </record>


    </data>
</odoo>
