<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_hr_employee_exit_form_tree" model="ir.ui.view">
            <field name="name">hr.employee.exit.form.tree.view</field>
            <field name="model">hr.employee.exit.form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Employee Exit Form">
                    <field name="name"/>
                    <field name="employee_code"/>
                    <field name="employee_id"/>
                    <field name="cnic"/>
                    <field name="employee_father"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="city_id"/>
                    <field name="branch_id"/>
                    <field name="joining_date"/>
                    <field name="reason"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_exit_form" model="ir.ui.view">
        <field name="name">hr.employee.exit.form.view</field>
        <field name="model">hr.employee.exit.form</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <form string="Employee Exit Form">
                <header>
                    <button name="action_section_head" states="draft" string="Submit To Section Head" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_branch_head" states="Section Head" string="Submit To Branch Head" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_accounts" states="Branch Head" string="Submit To Accounts Department" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_hr" states="Accounts" string="Submit To HR Department" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_done" states="HR" string="Done" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button name="action_reject" states="draft,Section Head,Branch Head,Accounts" string="Rejected" type="object" groups="base.group_user"/>
                    <field name="state" widget="statusbar" nolabel="1" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" required="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="employee_code" required="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="employee_father" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="cnic" required="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="joining_date" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="reason" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                        </group>
                        <group>
                            <field name="city_id" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="branch_id" required="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="department_id" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="job_id" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                            <field name="leaving_date" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                        </group>
                        <group attrs="{'invisible':[('reason','!=','Others')]}" colspan="4">
                            <field name="other_reason" attrs="{'readonly':[('state','in',('done','Reject'))]}"/>
                        </group>
                    </group>

                    <group string="Employee Department" name="employee_department" attrs="{'readonly':[('state','in',('done','Reject'))]}">
                        <table class="table table-bordered" attrs="{'readonly':[('state','in',('done','Reject'))]}">
                            <tr>
                                <th style="font-size:12px;width:50%;">Locker, drawer, office keys handover</th>
                                <th style="font-size:12px;width:50%;text-align:right;"><field name="keys_handover" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>
                            <tr>
                                <th style="font-size:12px;width:50%;">Office equipments i-e laptop, mobile phone etc</th>
                                <th style="font-size:12px;width:50%;text-align:right;"><field name="officer_equipment" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>
                             <tr>
                                <th style="font-size:12px;width:50%;">Stationery handover</th>
                                <th style="font-size:12px;width:50%;text-align:right;"><field name="stationery_handover" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>
                             <tr>
                                <th style="font-size:12px;width:50%;">Completed tasks and files handover</th>
                                <th style="font-size:12px;width:50%;text-align:right;"><field name="completed_task_handover" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>
                            <tr>
                                <th style="font-size:12px;width:50%;">Manuals and Books</th>
                                <th style="font-size:12px;width:50%;text-align:right;"><field name="manual_books" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>
                             <tr>
                                <th style="font-size:12px;width:50%;">Details of important matters pending</th>
                                <th style="font-size:12px;width:50%;text-align:left;"><field name="important_matters" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>
                            <tr>
                                <th style="font-size:12px;width:50%;">Details of various types of files &amp; reports maintained</th>
                                <th style="font-size:12px;width:50%;text-align:left;"><field name="file_reports_detail" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                            </tr>

                            <tr>
                                <th style="font-size:12px;width:50%;">Details of data stored on computer</th>
                                <th style="font-size:12px;width:50%;text-align:left;"><field name="computer_data_detail" nolabel="1"/></th>
                            </tr>
                        </table>
                    </group>


                    <group string="Library"  style="font-size:15px;text-align:center;" name="library_department" attrs="{'readonly':[('state','in',('done','Reject'))]}">
                        <table class="table table-bordered" attrs="{'readonly':[('state','in',('done','Reject'))]}">
                            <tr>
                               <th style="font-size:12px;width:30%;"></th>
                               <th style="font-size:12px;width:20%;text-align:right;"> Status</th>
                               <th style="font-size:12px;width:50%;text-align:center;">Remarks </th>
                           </tr>

                           <tr>
                               <th style="font-size:12px;width:30%;;text-align:left;">Books/ Manuals/CDs/DVDs</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="library_status" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                               <th style="font-size:12px;width:50%;;text-align:left;"><field name="library_remarks" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                           </tr>
                            <tr>
                                <th colspan="3" style="font-size:15px;text-align:center;">Accounts Department</th>
                            </tr>
                            <tr>
                               <th style="font-size:12px;width:30%;text-align:left;">Previous dues cleared</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="previous_dues_clear" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                               <th style="font-size:12px;width:50%;text-align:left;" colspan="2"><field name="accounts_dept_remarks" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                           </tr>
                            <tr>
                               <th style="font-size:12px;width:30%;text-align:left;">Informed about exemption from child benefits</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="child_benefit_exemption" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                           </tr>

                           <tr>
                                <th colspan="3" style="font-size:15px;text-align:center;">HR Department</th>
                           </tr>
                           <tr>
                               <th style="font-size:12px;width:30%;text-align:left;">Notice Period</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="notice_period" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                               <th style="font-size:12px;width:50%;text-align:left;"><field name="accounts_dept_remarks" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                           </tr>
                           <tr>
                               <th style="font-size:12px;width:30%;text-align:left;">Employee card returned</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="employee_card_return" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                               <th style="font-size:12px;width:50%;"></th>
                           </tr>

                            <tr>
                               <th style="font-size:12px;width:30%;text-align:left;">Exit Interview Conducted</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="exit_interview_conducted" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                               <th style="font-size:12px;width:50%;"></th>
                           </tr>

                            <tr>
                               <th style="font-size:12px;width:30%;text-align:left;">Recovery of Loan</th>
                               <th style="font-size:12px;width:20%;text-align:right;"> <field name="loan_recovery" nolabel="1" attrs="{'readonly':[('state','in',('done','Reject'))]}"/></th>
                               <th style="font-size:12px;width:50%;"></th>
                           </tr>

                        </table>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
        </record>

        <record id="view_hr_employee_exit_form_search" model="ir.ui.view">
            <field name="name">hr.employee.exit.form.search.view</field>
            <field name="model">hr.employee.exit.form</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Employee Exit Form Filters">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="employee_code"/>
                    <field name="employee_father"/>
                    <field name="cnic"/>
                    <field name="city_id"/>
                    <field name="branch_id"/>
                    <field name="job_id"/>

                    <group expand="0" string="Group By...">
                        <filter string="Employee" name="group_by_employee" icon="terp-partner" domain="[]" context="{'group_by':'employee_id'}"/>
						<separator/>
                        <filter string="Department" name="group_by_department" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter string="Designation" name="group_by_job" domain="[]" context="{'group_by':'job_id'}"/>
						<filter string="City" name="group_by_city" domain="[]" context="{'group_by':'city_id'}"/>
						<filter string="Branch" name="group_by_branch" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                     <searchpanel>
                         <field name="city_id"/>
                        <field name="branch_id" select="multi" domain="[('city_id','=',city_id)]"/>
                    </searchpanel>
                </search>
            </field>
        </record>

         <record id="hr_employee_exit_form_pivot_view" model="ir.ui.view">
            <field name="name">hr.employee.exit.form.pivot.view</field>
            <field name="model">hr.employee.exit.form</field>
            <field name="arch" type="xml">
                <pivot string="Employee Exit Form" display_quantity="true">
					<field name="branch_id" type="row"/>
					<field name="leaving_date" interval="month" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="view_emp_hr_salary_inputs_graph_view" model="ir.ui.view">
            <field name="name">hr.employee.exit.form.graph.view</field>
            <field name="model">hr.employee.exit.form</field>
            <field name="arch" type="xml">
                <graph string="Employee Exit Form">
                    <field name="branch_id" type="row"/>
					<field name="leaving_date" interval="month" type="col"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_hr_employee_exit_form">
            <field name="name">Employee Exit Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.exit.form</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="search_view_id" ref="view_hr_employee_exit_form_search" />
            <field name="domain">[]</field>
        </record>

    </data>
</odoo>
