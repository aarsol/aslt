<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="view_odooschool_odooschool_invoice_state_change" model="ir.ui.view">
			<field name="name">aslt.customer.merge.wiz.form</field>
			<field name="model">aslt.customer.merge.wiz</field>
			<field name="arch" type="xml">
				<form string="Merge Customer">
					<group>
						<group>
							<field name="customer_id" readonly="1"/>
						</group>
                        <group>
							<field name="merge_customer_id"/>
						</group>
						<group>
						</group>
					</group>


					<footer>
						<button name="merge_customer" string="Merge" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
			   </form>
			</field>
		</record>

		<act_window
			id="act_merge_customer"
			name="Merge Customer"
			res_model="aslt.customer.merge.wiz"
			binding_model="res.partner"
			binding_views="form"
			view_mode="form"
			target="new"
		/>

    </data>
</odoo>
