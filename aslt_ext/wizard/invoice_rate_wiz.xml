<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="view_invoice_rate_wiz" model="ir.ui.view">
			<field name="name">aslt.invoice.rate.wiz.form</field>
			<field name="model">aslt.invoice.rate.wiz</field>
			<field name="arch" type="xml">
				<form string="Invoice Rate">
					<group>
						<field name="invoice_rate"/>
					</group>
					<field name="invoice_ids"/>
					<footer>
						<button name="set_rate" string="Set Rate" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
			   </form>
			</field>
		</record>



<!--            <field name="view_mode">form</field>-->
<!--		     <field name="binding_model_id" ref="account.model_account_move" />-->
<!--            <field name="binding_view_types">list</field>-->
<!--      -->

		<act_window
			id="act_invoice_rate"
			name="Invoice Rate"
			res_model="aslt.invoice.rate.wiz"
			binding_model="account.move"
			binding_views="form,list"
			view_mode="form"
			target="new"
			groups="account.group_account_manager"
		/>

    </data>
</odoo>
