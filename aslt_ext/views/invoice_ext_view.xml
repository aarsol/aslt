<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- HR Employee -->
        <record id="aslt_ext_view_account_tree" model="ir.ui.view">
            <field name="name">account.move.Tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='state']" position="after">
                        <field name="invoice_state"/>
                        <field name="payment_state"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="aslt_ext_view_account_form" model="ir.ui.view">
            <field name="name">account.move.Form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='date']" position="after">
                        <field name="invoice_state"/>

                    </xpath>
                    <xpath expr="//field[@name='invoice_payment_term_id']" position="replace">
                        <field name="invoice_payment_term_id" placeholder="Terms"
                               attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}" required="1"/>

                    </xpath>
                </data>
            </field>
        </record>


        <record id="aslt_ext_view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.Tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>

            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='payment_difference_handling']" position="before">
                        <field name="payment_types" invisible="1"/>
                    </xpath>
                    <xpath expr="//group[@name='payment_difference']" position="inside">
                        <field name="due_date" attrs="{'invisible': [('payment_difference_handling', '!=', 'open')]}"/>

                    </xpath>

                    <xpath expr="//field[@name='communication']" position="after">

                        <field name="invoice_ref"/>
                        <field name="bank_receipt"/>

                    </xpath>
                    <xpath expr="//group[@name='right_column']" position="after">
                        <group String="Cheque Detail" attrs="{'invisible': [('payment_types', '!=', 'cheque')]}">
                            <field name="cheque_no" attrs="{'invisible': [('payment_types', '!=', 'cheque')]}"/>
                            <field name="cheque_date" attrs="{'invisible': [('payment_types', '!=', 'cheque')]}"/>

                        </group>
                        <group String="Cross Settlement"
                               attrs="{'invisible': [('payment_types', '!=', 'cross_settlement')]}">
                            <field name="cross_vendor"
                                   attrs="{'invisible': [('payment_types', '!=', 'cross_settlement')]}"/>
                            <field name="cross_invoice" domain="[('partner_id','=',cross_vendor)]"
                                   attrs="{'invisible': [('payment_types', '!=', 'cross_settlement')]}"/>
                            <field name="cross_amount"
                                   attrs="{'invisible': [('payment_types', '!=', 'cross_settlement')]}"/>

                        </group>
                        <group String="Exchange Company Detail"
                               attrs="{'invisible': [('payment_types', '!=', 'Exchange_company')]}">
                            <field name="exchange_company_id"
                                   attrs="{'invisible': [('payment_types', '!=', 'Exchange_company')]}"/>
                            <field name="receiver_name"
                                   attrs="{'invisible': [('payment_types', '!=', 'Exchange_company')]}"/>
                            <field name="exchange_receipt_no"
                                   attrs="{'invisible': [('payment_types', '!=', 'Exchange_company')]}"/>

                        </group>

                    </xpath>
                </data>
            </field>
        </record>


        <record id="aslt_ext_view_account_payment_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.invoice.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_ref']" position='replace'>
                    <field name="invoice_ref" invisible="1"/>

                </xpath>
                <xpath expr="//field[@name='bank_receipt']" position='replace'>
                    <field name="bank_receipt" invisible="1"/>

                </xpath>
                <xpath expr="//footer" position='replace'>
                    <footer>
                        <field name="state" invisible="1"/>
                        <button string='Validate' name="post" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </xpath>
            </field>
        </record>

        <record id="aslt_ext_view_account_payment_search" model="ir.ui.view">
            <field name="name">account.move.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_user_id']" position='after'>
                    <filter name="invoice_state" string="Invoice Status" context="{'group_by':'state'}"/>
                </xpath>
                <xpath expr="//filter[@name='status']" position='after'>
                    <filter string="Partial Paid" name="partial_paid" domain="[('invoice_state', '=', 'partial_paid')]"
                    />
                </xpath>
                <xpath expr="//filter[@name='salesperson']" position='after'>
                    <filter name="invoice_state" string="Invoice Status" context="{'group_by':'invoice_state'}"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>