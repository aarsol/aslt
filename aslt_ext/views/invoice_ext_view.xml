                print_report_name="(object._get_report_base_filename())"
                groups="account.group_account_invoice"
        />

        <template id="web.external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="branch_id">
                    <t t-set="company" t-value="branch_id"/>
                </t>
                <t t-elif="o and 'branch_id' in o">
                    <t t-set="company" t-value="o.branch_id.sudo()"/>
                </t>
                <t t-elif="o and 'user_id' in o">
                    <t t-set="company" t-value="o.user_id.branch_id.sudo()"/>
                </t>
                <t t-elif="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}">
                <t t-raw="0"/>
            </t>
            <t t-else="else" t-call="web.external_layout_standard">
                <t t-raw="0"/>
            </t>
        </template>

        <template id="aslt_ext_report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@id='informations']//div[1]" position='before'>
                <div t-if="o.branch_id.vat or o.company_id.vat" class="col-auto mw-100 mb-2">
                    <strong>VAT TRN No.:</strong>
                    <p class="m-0" t-esc="o.branch_id.vat or o.company_id.vat"/>
                </div>

            </xpath>

            <xpath expr="//div[@class='page']/p[1]" position='replace'>
                <p style="font-weight:bold;">
                    Terms
                </p>

            </xpath>
            <xpath expr="//div[@class='page']/p[3]" position='after'>

                <p name="payment_methods">
                    Payment Method:
                    <span t-field="o.partner_id.payment_methods"/>
                </p>
                <p name="telegraphic">
                    Telegraphic transfer detail:
                    <br></br>
                    COMPANY BANK ACCOUNT DETAIL:
                    <br></br>
                    (<span t-field="o.branch_id.bank_name"/>)
                    <br></br>
                    Bank Name:
                    <span t-field="o.branch_id.bank_name"/>
                    <br></br>
                    Account BENEFICIARY:
                    <span t-field="o.branch_id.name"/>
                    <br></br>
                    IBAN Account No :
                    <span t-field="o.branch_id.iban_account_no"/>
                    <br></br>
                    Account No :
                    <span t-field="o.branch_id.account_no"/>
                    <br></br>
                    SWIFt :
                    <span t-field="o.branch_id.swift"/>
                    <br></br>
                    Account Type :
                    <span t-field="o.branch_id.account_type"/>
                    <br></br>
                    Postal Code :
                    <span t-field="o.branch_id.zip"/>
                    <br></br>
                    City :
                    <span t-field="o.branch_id.city"/>
                    <br></br>
                    Country :
                    <span t-field="o.branch_id.country_id.name"/>
                    <br></br>
                    Bank Address :
                    <span t-field="o.branch_id.bank_address"/>
                    <br></br>
                    Company Address :
                    <span t-field="o.branch_id.street"/>
                    <br></br>
                    Email ID :
                    <span t-field="o.branch_id.email"/>
                    <br></br>
                    Country :
                    <span t-field="o.branch_id.country_id.name"/>
                    <br></br>
                    <br></br>
                    Paypal ID :
                    <span t-field="o.branch_id.paypal_id"/>
                    <br></br>
                    Thank You for your time and consideration in our services!

                </p>

            </xpath>


            <!--            <xpath expr="//t[@t-set='address']" position='replace'>-->
            <!--                <br></br>-->
            <!--                <br></br>-->


            <!--                <t t-set="address">-->
            <!--                    <address t-field="o.partner_id"-->
            <!--                             t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>-->
            <!--                    <div t-if="o.partner_id.vat" class="mt16">-->
            <!--                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"-->
            <!--                           id="inv_tax_id_label"/>-->
            <!--                        <t t-else="">Tax ID</t>:-->
            <!--                        <span t-field="o.partner_id.vat"/>-->
            <!--                    </div>-->
            <!--                </t>-->

            <!--            </xpath>-->
            <xpath expr="//div[@id='total']//table[1]/t" position='replace'>
                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                    <tr style="">
                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                            <td>
                                <span t-esc="amount_by_group[0]"/>
                                (<span t-esc="o.branch_id.vat or o.company_id.vat"/>)
                            </td>
                            <td class="text-right o_price_total">
                                <span t-esc="amount_by_group[3]"/>
                            </td>
                        </t>
                        <t t-else="">
                            <td>
                                (<span t-esc="o.branch_id.vat or o.company_id.vat"/>)
                                <span t-esc="amount_by_group[0]"/>
                                <span>&amp;nbsp;
                                    <span>on</span>
                                    <t t-esc="amount_by_group[4]"/>
                                </span>
                            </td>
                            <td class="text-right o_price_total">
                                <span t-esc="amount_by_group[3]"/>
                            </td>
                        </t>
                    </tr>
                </t>
            </xpath>
        </template>

        <template id="aslt_ext_external_layout_standard" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@name='company_address']//div[1]" position='replace'>
                <div t-field="company.partner_id.name"/>
                <div>VAT TRN No.
                    <span t-field="company.partner_id.vat"/>
                </div>
                <div t-field="company.partner_id.street"/>
                <div>Mobile:<span t-field="company.partner_id.phone"/>|
                    <span t-field="company.partner_id.city"/>|
                    <span t-field="company.partner_id.zip"/>
                </div>
                <div>
                    <span t-field="company.partner_id.email"/>
                    |
                    <span t-field="company.partner_id.country_id.name"/>
                </div>


            </xpath>
        </template>

        <template id="report_saleorder_document_aslt" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@id='informations']//div[1]" position='before'>
                <div t-if="doc.branch_id.vat or doc.company_id.vat" class="col-auto mw-100 mb-2">
                    <strong>VAT TRN No.:</strong>
                    <p class="m-0" t-esc="doc.branch_id.vat or doc.company_id.vat"/>
                </div>
            </xpath>

            <td name="td_amount_by_group_label" position="replace">
                <td name="td_amount_by_group_label">(<span t-esc="doc.branch_id.vat or doc.company_id.vat"/>)
                    <span t-esc="amount_by_group[0]"/>
                </td>
            </td>

        </template>


    </data>
</odoo>
