      <template id="web.external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="branch_id">
                <t t-set="company" t-value="branch_id"/>
            </t>
            <t t-elif="o and 'branch_id' in o">
                <t t-set="company" t-value="o.branch_id.sudo()"/>
            </t>
            <t t-elif="o and 'user_id' in o">
                <t t-set="company" t-value="o.user_id.branch_id.sudo()"/>
            </t>
            <t t-elif="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t t-raw="0"/></t>
        <t t-else="else" t-call="web.external_layout_standard"><t t-raw="0"/></t>

    </template>

        <template id="aslt_ext_report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@id='total']//table[1]/tr[1]" position='after'>
                <tr style="">
                    <td>
                        <strong>VAT(<t t-if="o.company_id.vat" t-esc="o.company_id.vat"/>)
                        </strong>
                    </td>

                </tr>
            </xpath>
        </template>

         <template id="aslt_ext_external_layout_standard" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@name='company_address']//div[1]" position='replace'>
                 <div t-field="company.partner_id.name"/>
                <div>VAT TRN No. <span t-field="company.partner_id.vat"/></div>
                <div t-field="company.partner_id.street"/>
                <div><span t-field="company.partner_id.city"/> <span t-field="company.partner_id.zip"/> , <span t-field="company.partner_id.country_id.name"/></div>
            </xpath>
        </template>


    </data>
